{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@apployees-nx/examples/library1": ["libs/examples/library1/src/index.ts"],
      "@apployees-nx/examples/library2": ["libs/examples/library2/src/index.ts"],
      "@apployees-nx/common-build-utils": ["libs/common-build-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
